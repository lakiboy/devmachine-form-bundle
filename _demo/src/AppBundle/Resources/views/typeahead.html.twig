{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h2>Basic example</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include 'AppBundle::form.html.twig' with { form: language } only %}
        </div>
        <div class="col-md-6">
            <pre><code class="language-php">{{ app_method_source('AppBundle:Typeahead:languageForm') }}</code></pre>
        </div>
    </div>

    <div class="page-header">
        <h2>Country chooser</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include 'AppBundle::form.html.twig' with { form: country } only %}
        </div>
        <div class="col-md-6">
            <pre><code class="language-php">{{ app_method_source('AppBundle:Typeahead:countryForm') }}</code></pre>
        </div>
    </div>

    <div class="page-header">
        <h2>Timezone chooser</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include 'AppBundle::form.html.twig' with { form: timezone } only %}
        </div>
        <div class="col-md-6">
            <pre><code class="language-php">{{ app_method_source('AppBundle:Typeahead:timezoneForm') }}</code></pre>
        </div>
    </div>

    <div class="page-header">
        <h2>Custom value</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include 'AppBundle::form.html.twig' with { form: airport } only %}
        </div>
        <div class="col-md-6">
            <pre><code class="language-php">{{ app_method_source('AppBundle:Typeahead:airportForm') }}</code></pre>
        </div>
    </div>

    <div class="page-header">
        <h2>Custom ajax example</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include 'AppBundle::form.html.twig' with { form: ajax } only %}
        </div>
        <div class="col-md-6">
            <pre><code class="language-php">{{ app_method_source('AppBundle:Typeahead:ajaxForm') }}</code></pre>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h5>Custom form type</h5>
            <pre><code class="language-php">{{ app_class_source('AppBundle\\Form\\Type\\TypeaheadLanguageType') }}</code></pre>
        </div>
        <div class="col-md-6">
            <h5>Custom search action</h5>
            <pre><code class="language-php">{{ app_method_source('AppBundle:Typeahead:searchAction', 'full_method') }}</code></pre>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ form_javascript(language) }}
    {{ form_javascript(airport) }}
    {{ form_javascript(country) }}
    {{ form_javascript(timezone) }}
    {{ form_javascript(ajax) }}
{% endblock %}
